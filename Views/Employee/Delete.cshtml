@model Employee

<form method="post" asp-action="Delete">
  <input asp-for ="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Delete Employee <hr /></h2>
            
        </div>
    @* <div asp-validation-summary="All"></div> *@
         <div class="mb-3">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" disabled class="form-control" />
        
       </div>
      <div class="mb-3">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" disabled class="form-control" />
        
      </div>
       <div class="mb-3">
        <label asp-for="DOJ"></label>
        <input asp-for="DOJ" disabled class="form-control" />
        
       </div>
       <div class="mb-3">
        <label asp-for="Designation"></label>
        <input asp-for="Designation" disabled class="form-control" />
        
       </div>
       <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" disabled class="form-control" />
        
       </div>
      <button type="submit" class="btn btn-danger" style="width: 150px;">Delete </button>
      <a asp-asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width: 150px;">
        Back to List
      </a>
    </div>

</form>

@section Scripts{
    @{
      <partial name="_ValidationScriptsPartial" />
    }
}