@model Skill

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Skills <hr /></h2>
            
        </div>
    @* <div asp-validation-summary="All"></div> *@
         <div class="mb-3">
        <label asp-for="Skills"></label>
        <input asp-for="Skills" class="form-control" />
        <span asp-validation-for="Skills" class="text-danger"></span>
       </div>
      
      <button type="submit" class="btn btn-primary" style="width: 150px;">Add Skills</button>
      <a asp-asp-controller="Skill" asp-action="Index" class="btn btn-secondary" style="width: 150px;">
        Back to List
      </a>
    </div>

</form>

@section Scripts{
    @{
      <partial name="_ValidationScriptsPartial" />
    }
}