<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeSkillsManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/EmployeeSkillsManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
            <div class="container-fluid">
                <div class="row">
                <div class="col-3 border-right text-center ml-3">
                <img src="~/images/capglogo.png">
                </div>
                </div>
                <div class="navbar-brand text-center" >
                    <i class="bi bi-list"></i> &nbsp Employee Skills Management
                </div>
                   
                    
                <div class="navbar-brand text-center navbar" >
                
                    <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Admin 
                    </button>
                    <div class="dropdown-menu " aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Profile</a>
                    <a class="dropdown-item" asp-action="Logout" asp-controller="Admin" >LogOut</a>

                    </div>
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row ">
           <div class="navbar-collapse  d-sm-inline col-xs-2 col-sm-2 col-md-2 col-lg-2 border-right justify-content-top">
                <ul class="navbar-nav flex-grow-1 ">
                    <li class="nav-item">
                        <a class="nav-link  text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <hr />
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Manage Employees</a>
                        <hr />
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-dark" asp-area="" asp-controller="Skill" asp-action="Index">Manage Skills</a>
                        <hr />
                    </li>
                </ul>
                
            </div>
             <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                    <main role="main" class="pb-3">
                       <partial name="_Notification" />
                       @RenderBody()
                     </main>
            </div>
                
        </div>
        
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
